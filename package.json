{
  "name": "substance",
  "version": "1.0.0",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "storybook",
      "website"
    ]
  },
  "dependencies": {
    "@babel/core": "^7.9.0",
    "@changesets/cli": "^2.6.5",
    "@jameslnewell/babel-preset": "^2.0.0",
    "@jameslnewell/editor-config": "^1.0.1",
    "@jameslnewell/eslint-config": "^0.13.5",
    "@jameslnewell/jest-preset-test": "^5.1.0",
    "@jameslnewell/prettier-config": "^1.0.1",
    "@jameslnewell/typescript-config": "^3.0.0",
    "@preconstruct/cli": "^1.1.14",
    "@types/jest": "^25.2.1",
    "eslint": "^6.8.0",
    "husky": "^4.2.5",
    "jest": "^25.4.0",
    "lerna": "^3.20.2",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "typescript": "^3.8.3"
  },
  "scripts": {
    "postinstall": "preconstruct dev",
    "testing": "jest",
    "typing": "tsc --noEmit",
    "linting": "eslint --ext .ts,.tsx packages",
    "formatting": "prettier --check .",
    "format": "prettier --write .",
    "start:storybook": "yarn workspace @substance/storybook run start",
    "start:website": "yarn workspace @substance/website run start",
    "build:packages": "preconstruct build",
    "build:other": "lerna run build",
    "build": "yarn run build:packages & yarn run build:other",
    "version": "changeset add",
    "release": "yarn run build && changeset publish"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  },
  "license": "MIT"
}
